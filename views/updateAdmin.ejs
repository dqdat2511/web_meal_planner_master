<% if (recipe !=null) { %>
 

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-8">
  
      <form action="/update/<%=recipe._id%>" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
  
            <img src="/uploads/<%- recipe.image %>" class="img-fluid" style="top: 20px; border-radius: 5%; size: 50px;"  alt="<%- recipe.name %>" loading="lazy">
          <div class="col-12">
            <label for="name" class="form-label">Recipe Name</label>
            <input type="text" name="name" id="name" class="form-control" value="<%=recipe.name %> " required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control"  cols="30" rows="4"  ><%= recipe.description %></textarea>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Ingredients</label><br>
            <small>Example: Ice</small>
            <div class="ingredientList">
                <% recipe.ingredients.forEach(function(ingredients , index) { %>
                    <div class="ingredeintDiv mb-1">
                        <input type="text" name="ingredients" class="form-control" value="<%= ingredients%> ">
                      </div>
                <% }) %>            
            </div>
          </div>
  
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Ingredient</button>
          </div>
  
          <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category">           
              <% category.forEach(function(category ,index) { %>
                <option value="<%=category.name%>"><%=category.name%></option>
              
              <% }) %>
             
              <option selected value="<%=recipe.category%>"><%=category.name%></option>
            </select>
          </div>    
          <div class="col-12">
            <label for="calories" class="form-label">Calories</label>
            <input type="text" name="calories" id="calories" class="form-control" value="<%= recipe.calories %> " required>
          </div>
          <div class="col-12">
            <label for="protein" class="form-label">Protein</label>
            <input type="text" name="protein" id="protein" class="form-control"  value="<%= recipe.protein %> "  required>
          </div>
          <div class="col-12">
            <label for="carbohydrates" class="form-label">Carbohydrates</label>
            <input type="text" name="carbohydrates" id="carbohydrates" class="form-control"  value="<%= recipe.carbohydrates %> " required>
          </div>
          <div class="col-12">
            <label for="fat" class="form-label">Fat</label>
            <input type="text" name="fat" id="fat" class="form-control" value="<%= recipe.fat%> "  required>
          </div>
          <div class="col-12">
            <label for="fiber" class="form-label">Fiber</label>
            <input type="text" name="fiber" id="fiber" class="form-control"  value="<%= recipe.fiber %> "  required>
          </div>
          <div class="col-12">
            <label for="sugar" class="form-label">Sugar</label>
            <input type="text" name="sugar" id="sugar" class="form-control"  value="<%= recipe.sugar %> "  required>
          </div>
          <div class="col-12">
            <label for="servingsize" class="form-label">Serving Size</label>
            <input type="text" name="servingsize" id="servingsize" class="form-control"  value="<%= recipe.servingsize %> "  required>
            <input type="hidden" name="numberofservingsize" value="1">
          </div>

          <div class="col-12">
            <label for="image">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-update">Submit Recipe</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>
<% } else { %>
    <p> no found</p>
 <% } %> 
   